# Agency OS Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# Model Configuration (defaults shown)
AGENCY_MODEL=gpt-5                    # Primary model for all agents
PLANNER_MODEL=gpt-5                   # Planner agent specific override
CODER_MODEL=gpt-5                     # Code agent specific override
AUDITOR_MODEL=gpt-5                   # Auditor agent specific override
QUALITY_ENFORCER_MODEL=gpt-5          # Quality enforcer specific override
SUMMARY_MODEL=gpt-5-mini              # Summary agent (can use smaller model)

# Memory & Learning Configuration
USE_ENHANCED_MEMORY=true              # Enable VectorStore integration
FRESH_USE_FIRESTORE=false            # Use Firestore for persistent memory
PERSIST_PATTERNS=false                # Persist learned patterns

# Testing Configuration
FORCE_RUN_ALL_TESTS=0                 # Set to 1 to force all tests to run
AGENCY_SKIP_GIT=0                     # Set to 1 to skip git-related tests
AGENCY_TEST_TIMEOUT_OVERRIDE=600      # Test timeout in seconds

# Development Configuration
ENABLE_UNIFIED_CORE=true              # Enable unified core system
USE_PARALLEL_AUDIT=false              # Enable parallel auditing
ENABLE_AUTO_ROLLBACK=true             # Enable automatic rollback on failures

# Logging Configuration
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR
ENABLE_TELEMETRY=true                 # Enable telemetry logging

# Optional: Firebase Configuration (if using Firestore)
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_CREDENTIALS_PATH=./path/to/credentials.json

# Optional: GitHub Integration
# GITHUB_TOKEN=your_github_token
# GITHUB_REPO=owner/repo

# Optional: External Services
# ANTHROPIC_API_KEY=your_anthropic_key
# FIRECRAWL_API_KEY=your_firecrawl_key